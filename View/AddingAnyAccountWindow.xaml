<Window x:Class="View.AddingAnyAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="AddingAnyAccountWindow"         
        Height="196.875"
        Width="368.491"
        ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="SumTextBox" GotFocus="SumTextBox_OnGotFocus" HorizontalAlignment="Left" Height="23" Margin="77,29,0,0" TextWrapping="Wrap" Text="Сумма" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="PeriodTextBox" GotFocus="PeriodTextBox_OnGotFocus" HorizontalAlignment="Left" Height="23" Margin="178,29,0,0" TextWrapping="Wrap" Text="Период в месяцах" VerticalAlignment="Top" Width="117"/>
        <CheckBox x:Name="CapitalizationCheckBox" Content="С капитализацией" HorizontalAlignment="Left" Margin="77,69,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OkButton" Content="OK" Click="OkButton_OnClick"  HorizontalAlignment="Left" Margin="74,103,0,0" VerticalAlignment="Top" Width="92" Height="34"/>
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_OnClick"  HorizontalAlignment="Left" Margin="203,103,0,0" VerticalAlignment="Top" Width="92" Height="34"/>

    </Grid>
</Window>
